# =============================================================================
# Deepfake Detector - Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Core Settings
# -----------------------------------------------------------------------------
# Environment: development, staging, production
DEEPFAKE_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEEPFAKE_LOG_LEVEL=INFO

# Path to configuration file (optional, uses config/config.yaml by default)
DEEPFAKE_CONFIG_PATH=

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
# Number of parallel workers for batch processing (0 = auto-detect CPU cores)
DEEPFAKE_NUM_WORKERS=0

# Maximum memory usage in MB (0 = unlimited)
DEEPFAKE_MAX_MEMORY_MB=4096

# Enable GPU acceleration if available (true/false)
DEEPFAKE_ENABLE_GPU=false

# Processing timeout in seconds
DEEPFAKE_TIMEOUT=300

# -----------------------------------------------------------------------------
# Detection Thresholds
# -----------------------------------------------------------------------------
# Score threshold for DEEPFAKE verdict (0.0-1.0)
DEEPFAKE_THRESHOLD=0.35

# Score threshold for UNCERTAIN verdict (0.0-1.0)
DEEPFAKE_UNCERTAIN_THRESHOLD=0.25

# Minimum confidence for reporting findings
DEEPFAKE_MIN_CONFIDENCE=0.60

# -----------------------------------------------------------------------------
# Video Processing
# -----------------------------------------------------------------------------
# Maximum frames to analyze (0 = all frames)
DEEPFAKE_MAX_FRAMES=200

# Frame sampling rate (analyze every N frames)
DEEPFAKE_SAMPLE_RATE=2

# Minimum face size in pixels for detection
DEEPFAKE_MIN_FACE_SIZE=64

# Enable audio analysis (true/false)
DEEPFAKE_ENABLE_AUDIO=true

# -----------------------------------------------------------------------------
# Output Settings
# -----------------------------------------------------------------------------
# Output directory for results
DEEPFAKE_OUTPUT_DIR=./output

# Default output format: text, json, html
DEEPFAKE_OUTPUT_FORMAT=json

# Enable verbose output (true/false)
DEEPFAKE_VERBOSE=false

# -----------------------------------------------------------------------------
# API Keys (if using external services)
# -----------------------------------------------------------------------------
# Example: Face recognition API (optional)
# FACE_API_KEY=your_api_key_here
# FACE_API_ENDPOINT=https://api.example.com/v1

# Example: Cloud storage for large video processing (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# -----------------------------------------------------------------------------
# Research/Development Settings
# -----------------------------------------------------------------------------
# Enable debug mode with additional logging
DEEPFAKE_DEBUG=false

# Save intermediate frames for analysis
DEEPFAKE_SAVE_FRAMES=false

# Path to save debug outputs
DEEPFAKE_DEBUG_DIR=./debug_output
