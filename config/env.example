# ==============================================================================
# Deepfake Detection Agent - Environment Variables
# ==============================================================================
# Copy this file to .env and customize as needed.
# The .env file should contain your local settings.
# ==============================================================================

# ------------------------------------------------------------------------------
# Core Settings
# ------------------------------------------------------------------------------
# Detection threshold (score above this = DEEPFAKE)
DEEPFAKE_THRESHOLD=0.35

# Uncertain threshold (score below this = REAL)
DEEPFAKE_UNCERTAIN_THRESHOLD=0.25

# Maximum frames to analyze
DEEPFAKE_MAX_FRAMES=200

# Sample rate (analyze every Nth frame)
DEEPFAKE_SAMPLE_RATE=2

# ------------------------------------------------------------------------------
# Feature Toggles
# ------------------------------------------------------------------------------
# Enable GPU acceleration (requires CUDA)
DEEPFAKE_ENABLE_GPU=false

# Enable audio analysis (requires ffmpeg)
DEEPFAKE_ENABLE_AUDIO=true

# Enable debug mode
DEEPFAKE_DEBUG=false

# ------------------------------------------------------------------------------
# Skill Weights
# ------------------------------------------------------------------------------
# Visual artifacts weight (most important)
DEEPFAKE_WEIGHT_VISUAL_ARTIFACTS=3.0

# Temporal consistency weight
DEEPFAKE_WEIGHT_TEMPORAL=1.0

# Physiological signals weight
DEEPFAKE_WEIGHT_PHYSIOLOGICAL=1.0

# Frequency analysis weight
DEEPFAKE_WEIGHT_FREQUENCY=1.0

# ------------------------------------------------------------------------------
# Logging
# ------------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEEPFAKE_LOG_LEVEL=INFO

# Log file path (leave empty for stdout only)
DEEPFAKE_LOG_FILE=

# Enable JSON logging
DEEPFAKE_LOG_JSON=false

# ------------------------------------------------------------------------------
# Performance
# ------------------------------------------------------------------------------
# Maximum memory usage (MB)
DEEPFAKE_MAX_MEMORY_MB=4096

# Number of worker threads
DEEPFAKE_NUM_WORKERS=4

# Timeout for single video (seconds)
DEEPFAKE_TIMEOUT=300

# ------------------------------------------------------------------------------
# Output
# ------------------------------------------------------------------------------
# Default output format: text, json, html
DEEPFAKE_OUTPUT_FORMAT=text

# Output directory for reports
DEEPFAKE_OUTPUT_DIR=./output

